<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="9.0"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.0"
        android:weightSum="6.0"
        android:background="#E7E3E7" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3.98"
            android:text="Catch"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#F79221"
            android:textSize="35px"
            android:gravity="center|left"
            android:textStyle="bold" />

      

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.98"
            android:src="@drawable/refresh"
            android:scaleType="fitXY" />
          <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.98"
            android:src="@drawable/settings"
            android:scaleType="fitXY"
            android:layout_marginLeft="4dp"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
         android:layout_weight="1.0"
         android:weightSum="3.0">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:scaleType="fitXY"
            android:src="@drawable/notes" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:scaleType="fitXY"
            android:src="@drawable/tags" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:weightSum="3.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="All notes"
            android:textStyle="bold"
            android:textSize="25px"
            android:textColor="#085D8C" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Tags"
             android:textStyle="bold"
            android:textSize="25px"
            android:textColor="#085D8C" 
            android:paddingRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_weight="1.0" 
         android:weightSum="3.0">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:scaleType="fitXY"
            android:src="@drawable/text" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:scaleType="fitXY"
            android:src="@drawable/streams" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:weightSum="3.0">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.50"
            android:gravity="center"
            android:text="Text note"
             android:textStyle="bold"
             android:background="#FFFFFF"
            android:textSize="25px"
            android:textColor="#085D8C" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.50"
            android:gravity="center"
            android:text="Streams"
             android:background="#FFFFFF"
              android:textStyle="bold"
             android:textSize="25px"
             android:paddingRight="25dp"
            android:textColor="#085D8C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
         android:layout_weight="1.0"
         android:weightSum="3.0">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:scaleType="fitXY"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:scaleType="fitXY"
            android:src="@drawable/gallery" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_weight="0.5"
		android:weightSum="3.0">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:gravity="center"
            android:text="Camera note"
             android:background="#FFFFFF"
              android:textStyle="bold"
             android:textSize="25px"
            android:textColor="#085D8C" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.50"
            android:gravity="center"
            android:text="Gallery note"
             android:background="#FFFFFF"
              android:textStyle="bold"
           android:textSize="25px"
            android:textColor="#085D8C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_weight="1.0" 
         android:weightSum="3.0">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:scaleType="fitXY"
            android:src="@drawable/voice" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:scaleType="fitXY"
            android:src="@drawable/remainder" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:weightSum="3.0" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.49"
            android:gravity="center"
            android:text="Voicenote"
             android:background="#FFFFFF"
              android:textStyle="bold"
            android:textSize="25px"
            android:textColor="#085D8C" 
            android:paddingLeft="25dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.50"
            android:gravity="center"
            android:text="Remainder note"
             android:background="#FFFFFF"
              android:textStyle="bold"
            android:textSize="25px"
            android:textColor="#085D8C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_weight="1.0"
         android:background="#E7E3E7" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sign in for free cloud backup! "
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
         android:layout_weight="1.0"
         android:weightSum="3.0" >

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Your private data will remain private."
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20px"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" 
            android:layout_weight="2.0"/>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/facebook" 
            android:background="#346AE6"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="0.5"
            android:layout_marginRight="3dp"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/google" 
            android:background="#F95530"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>

    </LinearLayout>

</LinearLayout>